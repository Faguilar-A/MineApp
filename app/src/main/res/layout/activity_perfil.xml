<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/minecraft"
    tools:context=".PerfilActivity">

    <!-- App Bar Mejorado -->
    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="85dp"
        android:background="@drawable/minecraft2"
        android:fitsSystemWindows="true">

        <com.google.android.material.appbar.MaterialToolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:title="Mi Perfil"
            android:titleTextColor="@android:color/white"
            android:titleTextAppearance="@style/ToolbarTitleStyle"
            app:navigationIconTint="@android:color/white"
            app:titleCentered="true" />

    </com.google.android.material.appbar.AppBarLayout>

    <!-- Contenido principal -->
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="20dp">

            <!-- Foto de perfil -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="30dp"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:layout_marginBottom="15dp"
                    android:background="@drawable/panchito"
                    android:padding="25dp" />

                <TextView
                    android:id="@+id/tvNombre"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/minecraft"
                    android:text="Aguilar Álvarez"
                    android:textColor="@android:color/white"
                    android:textSize="22sp"
                    android:textStyle="bold"
                    android:letterSpacing="0.05"
                    android:padding="4dp" />

                <TextView
                    android:id="@+id/tvCarrera"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/minecraft"
                    android:text="PROGRAMADOR - 4TO SEMESTRE"
                    android:textColor="@android:color/white"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:letterSpacing="0.03"
                    android:padding="2dp" />

            </LinearLayout>

            <!-- Tarjeta de información personal -->
            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="284dp"
                android:layout_marginBottom="20dp"
                app:cardCornerRadius="15dp"
                app:cardElevation="8dp"
                app:cardUseCompatPadding="true">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="25dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="20dp"
                        android:fontFamily="@font/minecraft"
                        android:gravity="center"
                        android:letterSpacing="0.03"
                        android:text="INFORMACIÓN DE CONTACTO"
                        android:textColor="@android:color/black"
                        android:textSize="18sp"
                        android:textStyle="bold" />

                    <!-- Email -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="15dp"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:padding="5dp">

                        <ImageView
                            android:layout_width="28dp"
                            android:layout_height="28dp"
                            android:layout_marginEnd="15dp"
                            android:src="@android:drawable/ic_dialog_email"
                            android:tint="@color/design_default_color_primary" />

                        <TextView
                            android:id="@+id/tvEmail"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:fontFamily="@font/minecraft"
                            android:letterSpacing="0.02"
                            android:text="HERMANOS_AGUILAR@ST.CL"
                            android:textColor="@android:color/black"
                            android:textSize="16sp"
                            android:textStyle="bold" />

                    </LinearLayout>

                    <!-- Teléfono -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="15dp"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:padding="5dp">

                        <ImageView
                            android:layout_width="28dp"
                            android:layout_height="28dp"
                            android:layout_marginEnd="15dp"
                            android:src="@android:drawable/ic_menu_call"
                            android:tint="@color/design_default_color_primary" />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:fontFamily="@font/minecraft"
                            android:letterSpacing="0.02"
                            android:text="+56 9 1234 5678"
                            android:textColor="@android:color/black"
                            android:textSize="16sp"
                            android:textStyle="bold" />

                    </LinearLayout>

                    <!-- Universidad -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:padding="5dp">

                        <ImageView
                            android:layout_width="28dp"
                            android:layout_height="28dp"
                            android:layout_marginEnd="15dp"
                            android:src="@android:drawable/ic_menu_agenda"
                            android:tint="@color/design_default_color_primary" />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:fontFamily="@font/minecraft"
                            android:letterSpacing="0.02"
                            android:text="IP SANTO TOMÁS"
                            android:textColor="@android:color/black"
                            android:textSize="16sp"
                            android:textStyle="bold" />

                    </LinearLayout>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <!-- Tarjeta de acciones rápidas -->

            <!-- Botón de editar perfil -->

            <androidx.cardview.widget.CardView
                android:layout_width="397dp"
                android:layout_height="239dp"
                android:layout_marginBottom="20dp"
                app:cardCornerRadius="15dp"
                app:cardElevation="8dp"
                app:cardUseCompatPadding="true">

                <LinearLayout
                    android:layout_width="358dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="25dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="20dp"
                        android:fontFamily="@font/minecraft"
                        android:gravity="center"
                        android:letterSpacing="0.03"
                        android:text="ACCIONES RÁPIDAS"
                        android:textColor="@android:color/black"
                        android:textSize="18sp"
                        android:textStyle="bold" />

                    <!-- Botones de acción -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:weightSum="3">

                        <Button
                            android:layout_width="9dp"
                            android:layout_height="100dp"
                            android:layout_marginEnd="8dp"
                            android:layout_weight="1"
                            android:background="@drawable/minecraft2"
                            android:drawableTop="@android:drawable/ic_menu_agenda"
                            android:drawablePadding="8dp"
                            android:drawableTint="@android:color/white"
                            android:fontFamily="@font/minecraft"
                            android:gravity="center"
                            android:letterSpacing="0.03"
                            android:padding="12dp"
                            android:text="HORARIO"
                            android:textColor="@android:color/white"
                            android:textSize="12sp"
                            android:textStyle="bold" />

                        <Button
                            android:layout_width="0dp"
                            android:layout_height="100dp"
                            android:layout_marginStart="4dp"
                            android:layout_marginEnd="4dp"
                            android:layout_weight="1"
                            android:background="@drawable/minecraft2"
                            android:drawableTop="@android:drawable/ic_menu_edit"
                            android:drawablePadding="8dp"
                            android:drawableTint="@android:color/white"
                            android:fontFamily="@font/minecraft"
                            android:gravity="center"
                            android:letterSpacing="0.03"
                            android:padding="12dp"
                            android:text="NOTAS"
                            android:textColor="@android:color/white"
                            android:textSize="12sp"
                            android:textStyle="bold" />

                        <Button
                            android:layout_width="22dp"
                            android:layout_height="100dp"
                            android:layout_marginStart="8dp"
                            android:layout_weight="1"
                            android:background="@drawable/minecraft2"
                            android:drawableTop="@android:drawable/ic_menu_today"
                            android:drawablePadding="8dp"
                            android:drawableTint="@android:color/white"
                            android:fontFamily="@font/minecraft"
                            android:gravity="center"
                            android:letterSpacing="0.03"
                            android:padding="12dp"
                            android:text="ASISTENCIA"
                            android:textColor="@android:color/white"
                            android:textSize="12sp"
                            android:textStyle="bold" />

                    </LinearLayout>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <Button
                android:id="@+id/btnEditarPerfil"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:background="@drawable/minecraft2"
                android:fontFamily="@font/minecraft"
                android:padding="15dp"
                android:text="EDITAR PERFIL"
                android:textColor="@android:color/white"
                android:textSize="16sp"
                android:textStyle="bold"
                android:letterSpacing="0.03" />

            <!-- Botón de cerrar sesión -->
            <Button
                android:id="@+id/btnCerrarSesion"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:layout_marginTop="12dp"
                android:background="@android:color/holo_red_dark"
                android:fontFamily="@font/minecraft"
                android:padding="15dp"
                android:text="CERRAR SESIÓN"
                android:textColor="@android:color/white"
                android:textSize="16sp"
                android:textStyle="bold"
                android:letterSpacing="0.03" />

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

</androidx.coordinatorlayout.widget.CoordinatorLayout>